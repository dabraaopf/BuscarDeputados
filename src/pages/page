import tkinter as Tk
from tkinter import ttk
from .page import Template 

class InfoContent(Template):
    def __init__(self, root, color_pallet={}):
        self._root = root
        self._main = None
        self._create_main()
        if len(color_pallet.keys()) > 0:
            self._color_pallet = color_pallet 
        else:
            self._color_pallet = self._get_colors()
        self._draw()

    def _get_colors(self):
        pass

    def visible(self, state):
        if state:
            self._main.place(
                relx=0, rely=0, relwidth=1, relheight=1
            )
        else:
            self._main.place_forget()

    def _create_main(self):
        self._main = Tk.Frame(
            self._root,
            name = self.__name__.lower(),
            bg = "white"
        )

    def _draw(self):
        print("should draw", self.__name__.lower())

